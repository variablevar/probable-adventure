{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "CommonJS", // or "CommonJS" based on your project setup
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"], // Include both source and test files
    "exclude": ["node_modules", "dist"]
  }